<body>
<!-- <%=orders%> -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Manage Your Orders</a>
</nav>
<!-- <% orders.forEach((order)=>{%> -->
<div class="card text-center">
  <div class="blue card-header">
    Order ID Number : <%=order.id%>
  </div>
  <a href="/deleteorder/<%=order.id%>">
  <div class="container text-right">
    Delete Order
  </div>
</a>
  <div class="card-body">
    <h5 class="card-title">Order Booked by  </h5>
    <h6>Name: <%=order.billing_address.name%></h6>
    <h6>Email: <%=order.email%></h6>
    <h6>Phone: <%=order.customer.phone%></h6>
    <p class="card-text">To See Details of your order go here <a href="<%= order.order_status_url%>"><%=order.order_status_url %></a></p>
    <a href="/editorder/<%=order.id%>" class="btn btn-primary">Edit Order</a>
  </div>
  <div class="blue card-footer ">
    Total Price Paid: <%=order.total_price%> Rs
  </div>
</div>
<%})%>
